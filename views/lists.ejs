<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="stylesheet" href="/css/dark-mode.css" />
		<link rel="stylesheet" href="/css/lists.css" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Fjalla+One&display=swap"
		/>
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
		/>
		<title>Create Lists</title>
	</head>
	<body>
		<div class="dark-screen">
			<div class="bg"></div>
			<div id="toggle" class="toggle-btn"></div>
			<div id="blender" class="expand"></div>
			<div class="container">
				<div class="main">
					<h1>Create list</h1>
					<ul>
						<% lists.forEach( el => { %>
						<li class="listItem" data-id="<%=el._id%>">
							<a href="/lists/<%=el._id%>" class="list"><%= el.name %></a>
							<span class="del"> Delete </span>
						</li>
						<% }) %>
					</ul>

					<h2>Lists Shared With You</h2>

					<% if (sharedLists.length > 0) { %>
					<ul>
						<% sharedLists.forEach( el => { %>
						<li class="listItem" data-id="<%=el._id%>">
							<a href="/lists/<%=el._id%>" class="list"><%= el.name %></a>
						</li>
						<% }) %>
					</ul>
					<% } else { %>
					<p>You haven't been shared a list yet.</p>
					<% } %>

					<form action="/lists/createList" method="POST">
						<input type="text" placeholder="Enter list name" name="name" />
						<input type="submit" value="Create" />
					</form>

					<div class="button-container">
						<a href="/logout">Logout</a>
					</div>
				</div>
			</div>
		</div>

		<script src="/js/main.js"></script>
		<script src="/js/darkMode.js"></script>
	</body>
</html>
