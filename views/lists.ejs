<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <h1>Lists</h1>
    <ul>
    <% lists.forEach( el => { %>
        <li class='listItem' data-id='<%=el._id%>'>
            <a href="/lists/<%=el._id%>" class="list"><%= el.name %></a>
            <span class='del'> Delete </span>
        </li>
    <% }) %>
    </ul>

    <h1>Lists Shared With You</h1>

    <% if (sharedLists.length > 0) { %>
        <ul>
        <% sharedLists.forEach( el => { %>
            <li class='listItem' data-id='<%=el._id%>'>
                <a href="/lists/<%=el._id%>" class="list"><%= el.name %></a>
            </li>
        <% }) %>
        </ul>
    <% } else { %>
        <p>You haven't been shared a list yet.</p>
    <% } %>


    <form action="/lists/createList" method='POST'>
        <input type="text" placeholder="Enter list name" name='name'>
        <input type="submit" value="Create">
    </form>

    <a href="/logout">Logout</a>

    <script src="/js/main.js"></script>
</body>
</html>